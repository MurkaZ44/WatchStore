<UserControl x:Class="Kursach.View.Forms.NewSell"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Kursach.View.Forms">
    <Grid>
        <Grid.RowDefinitions>
        <RowDefinition Height="40"/>
        <RowDefinition Height="30"/>
        <RowDefinition Height="30"/>
        <RowDefinition Height="30"/>  
        <RowDefinition Height="30"/>
        <RowDefinition Height="30"/>
        <RowDefinition Height="30"/>
        <RowDefinition Height="30"/>
        <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.ColumnSpan="2" Content="Проодаажааа" FontSize="20"></Label>
        <Label Grid.Row="1" Grid.Column="0" Content="Id"></Label>
        <TextBox Grid.Row="1" Grid.Column="1"
            Text=""
            HorizontalAlignment="Left"
            Width="100"
            Height="20"/>
        <Label Grid.Row="2" Grid.Column="0" Content="Ссылка на товар"></Label>
        <TextBox Grid.Row="2" Grid.Column="1"
                 Text=""
                 HorizontalAlignment="Left"
                 Width="100"
                 Height="20"/>
        <Label Grid.Row="3" Grid.Column="0" Content="Ссылка на клиента"></Label>
        <TextBox Grid.Row="3" Grid.Column="1"
                 Text=""
                 HorizontalAlignment="Left"
                 Width="100"
                 Height="20"/>
        <Label Grid.Row="4" Grid.Column="0" Content="Дата продажи"></Label>
        <TextBox Grid.Row="4" Grid.Column="1"
                 Text=""
                 HorizontalAlignment="Left"
                 Width="100"
                 Height="20"/>
        <Label Grid.Row="5" Grid.Column="0" Content="Стоимость продажи"></Label>
        <TextBox Grid.Row="5" Grid.Column="1"
                 Text=""
                 HorizontalAlignment="Left"
                 Width="100"
                 Height="20"/>
        <Label Grid.Row="6" Grid.Column="0" Content="Тип оплаты"></Label>
        <TextBox Grid.Row="6" Grid.Column="1"
                 Text=""
                 HorizontalAlignment="Left"
                 Width="100"
                 Height="20"/>
        <Label Grid.Row="7" Grid.Column="0" Content="Продавец"></Label>
        <TextBox Grid.Row="7" Grid.Column="1"
                 Text=""
                 HorizontalAlignment="Left"
                 Width="100"
                 Height="20"/>
        <Button Grid.Row="8" Grid.ColumnSpan="2" Content="ГООООЙДААА!!!"/>
    </Grid>
</UserControl>
