<UserControl x:Class="Kursach.View.Forms.NewClient"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Kursach.View.Forms">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>  
            <RowDefinition Height="30"/>  
            <RowDefinition Height="20"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.ColumnSpan="2" Content="Клииеентт" FontSize="20"></Label>
        <Label Grid.Row="1" Grid.Column="0" Content="Id"></Label>
        <TextBox Grid.Row="1" Grid.Column="1"
                 Name="Id"
                 HorizontalAlignment="Left"
                 Width="100"
                 Height="20"/>
        <Label Grid.Row="2" Grid.Column="0" Content="ФИО"></Label>
        <TextBox Grid.Row="2" Grid.Column="1"
                 Name="Fullname"
                 HorizontalAlignment="Left"
                 Width="100"
                 Height="20"/>
        <Label Grid.Row="3" Grid.Column="0" Content="Номер телефона"></Label>
        <TextBox Grid.Row="3" Grid.Column="1"
                 Name="Phone"
                 HorizontalAlignment="Left"
                 Width="100"
                 Height="20"/>
        <Label Grid.Row="4" Grid.Column="0" Content="Почта"></Label>
        <TextBox Grid.Row="4" Grid.Column="1"
                 Name="Email"
                 HorizontalAlignment="Left"
                 Width="100"
                 Height="20"/>
        <Button Grid.Row="5" Grid.ColumnSpan="2" Content="ГООООЙДААА!!!" 
                Name="Savestuf"/>
    </Grid>
</UserControl>
