<Application x:Class="Kursach.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Kursach"
             xmlns:viewModel="clr-namespace:Kursach.ViewModel"
             xmlns:forms="clr-namespace:Kursach.View.Forms"
             StartupUri="/View/MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewModel:ProductViewModel}">
            <forms:NewProduct/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:ClientViewModel}">
            <forms:NewClient/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:WarrantyViewModel}">
            <forms:NewWarranty/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:SellViewModel}">
            <forms:NewSell/>
        </DataTemplate>
    </Application.Resources>
</Application>
